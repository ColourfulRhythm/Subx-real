rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Require authentication for all operations
    // Migration complete - all data is now secure
    
    // Forum collections - allow read for all authenticated users
    match /forum_topics/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /forum_replies/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read/write their own data
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Plot ownership - users can read/write their own data
    match /plot_ownership/{document} {
      allow read, write: if request.auth != null;
    }
    
    // General rule for all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
