rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own investments
    match /investments/{investmentId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
    }
    
    // Users can only access their own plot ownership
    match /plot_ownership/{plotId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
    }
    
    // Users can only access their own documents
    match /documents/{documentId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
    }
    
    // Users can only access their own referrals
    match /referrals/{referralId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.referrer_id || 
         request.auth.uid == resource.data.referred_id);
    }
    
    // Users can only access their own referral withdrawals
    match /referral_withdrawals/{withdrawalId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
    }
    
    // Projects are publicly readable
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // Only admins can modify projects
    }
  }
}
