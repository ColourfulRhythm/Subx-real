rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow creating user documents during signup - user can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own investments
    match /investments/{investmentId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.user_id);
    }
    
    // Users can read/write their own plot ownership
    match /plot_ownership/{plotId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.user_id);
    }
    
    // Users can read/write their own documents
    match /documents/{documentId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.user_id);
    }
    
    // Users can read/write their own referrals
    match /referrals/{referralId} {
      allow read, write: if request.auth != null && 
        (resource == null || 
         request.auth.uid == resource.data.referrer_id || 
         request.auth.uid == resource.data.referred_id);
    }
    
    // Users can read/write their own referral withdrawals
    match /referral_withdrawals/{withdrawalId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.user_id);
    }
    
    // User profiles collection
    match /user_profiles/{profileId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.id);
      // Allow creating user profiles during signup - user can create their own profile
      allow create: if request.auth != null && request.auth.uid == profileId;
    }
    
    // Property documents collection
    match /property_documents/{documentId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.user_id);
      // Allow creating documents during purchase
      allow create: if request.auth != null;
    }
    
    // Projects are publicly readable
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // Only admins can modify projects
    }
    
    // Forum topics are publicly readable
    match /forum_topics/{topicId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Forum posts are publicly readable
    match /forum_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write their own data in any collection
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
